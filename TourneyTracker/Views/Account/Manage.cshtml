@model TourneyTracker.Models.Account.ManageModel
<div class="page-header">
    <h2>@User.Identity.Name</h2>
</div>

<div class="col-md-5">
    <div class="well bs-component">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { Class = "form-horizontal" }))
        {
            <fieldset>
                <legend>Change password</legend>
                @Html.HiddenFor(m => m.Email)
                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentPassword, "Current", new { Class = "col-lg-2 control-label" })
                    <div class="col-lg-9 col-lg-offset-1">
                        @Html.TextBoxFor(m => m.CurrentPassword, new { Type = "password", Class = "form-control", placeholder = "Password", required = true })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, "New", new { Class = "col-lg-1 control-label" })
                    <div class="col-lg-9 col-lg-offset-2">
                        @Html.TextBoxFor(m => m.NewPassword, new { Type = "password", Class = "form-control", placeholder = "Password", required = true })
                    </div>
                </div>
                <div class="form-group">
                    <label for="confirmPassword" class="col-lg-1 control-label">Confirm</label>
                    <div class="col-lg-9 col-lg-offset-2">
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Password" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-9">
                        <input type="submit" class="btn btn-primary col-lg-12" value="Submit" />
                    </div>
                </div>
                @Html.CustomHtml5ValidationInit()
            </fieldset>
        }
    </div>
</div>

<script type="text/javascript">
    @Html.CustomHtml5ValidationFor(m => m.CurrentPassword)
    @Html.CustomHtml5PasswordValidationFor(m => m.NewPassword, "confirmPassword")
</script>