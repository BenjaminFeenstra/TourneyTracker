@model TourneyTracker.Models.Tournament.CreateTournamentViewModel

<legend>Participants</legend>

<div class="col-lg-10">
        <table class="table table-striped table-hover table-scrollable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Participant</th>
                </tr>
            </thead>
            <tbody>
                @Html.EditorFor(m => m.Participants)
            </tbody>
        </table>
</div>
<div class="input-group col-lg-10">
    <input type="text" class="form-control" id="inputName" placeholder="Name">
    <span class="input-group-btn">
        <button class="btn btn-default addParticipant" type="button">Add</button>
    </span>
</div>
