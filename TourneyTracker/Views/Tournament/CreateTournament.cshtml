<h1>Create Tournament</h1>

<div class="row">
    <div class="col-lg-6">
        <div class="well bs-component">
            <form class="form-horizontal">
                <fieldset>
                    <legend>Create Tournament</legend>
                    <div class="form-group">
                        <div class="col-lg-2">
                            <label for="inputName" class="control-label">Name</label>
                        </div>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="inputName" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-2">
                            <label for="select" class="control-label">Type</label>
                        </div>
                        <div class="col-lg-10">
                            <select class="form-control" id="select">
                                <option>Choose a tournament type</option>
                                <option>Competition</option>
                                <option>Knock-out system</option>
                                <option>Combination</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-2">
                            <label for="inputTag" class="control-label">Tag</label>
                        </div>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="inputTag" placeholder="Tag">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="reset" class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="well bs-component">
            <form class="form-horizontal">
                <fieldset>
                    <legend>Participants</legend>
                    <div class="col-lg-8">
                        <table class="table table-striped table-hover table-scrollable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Participant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>9292ov</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Pay4yourlife</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Trolololol</td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td>GummBear</td>
                                </tr>
                                <tr>
                                    <td>5</td>
                                    <td>Feedstra</td>
                                </tr>
                                <tr>
                                    <td>6</td>
                                    <td>Kennen4Life</td>
                                </tr>
                                <tr>
                                    <td>7</td>
                                    <td>Banaan</td>
                                </tr>
                                <tr>
                                    <td>8</td>
                                    <td>Faalhaas</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <button type="reset" class="btn btn-default addParticipantButton">Add participants</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>

